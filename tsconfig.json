{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom",
      "dom.Iterable"
    ],
    "outDir": "dist",
    "pretty": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/build.tsbuildinfo"
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "dist"
  ]
}